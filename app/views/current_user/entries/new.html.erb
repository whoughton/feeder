
<section class="segment">
	<div class="panel">
		<h2>New Entry</h2>
		<%= form_for :entry, url: individual_entries_path(@user) do |f| %>
		<% if @entry.errors.any? %>
			<div class="error"><%= @entry.errors.full_messages.join(". ") %></div>
		<% end %>
		<ul>
			<li>
				<%= f.label :name %>
				<%= f.text_field :name %>
			</li>
			<li>
				<%= f.label :url %>
				<%= f.text_field :url %>
			</li>
			<li>
				<%= f.label :feed %>
				<%= collection_select(:entry, :feed_id, Feed.where('user_id = ?', @user.id), :id, :name) %>
			</li>
			<li class="actions">
				<%= link_to 'Cancel', individual_entries_path, {class: 'button cancel'} %>
				<%= f.submit %>
			</li>
		</ul>
		<% end %>
	</div>
</section>

