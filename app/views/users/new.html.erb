
<section class="segment">
	<div class="panel">
		<h2>New User</h2>
		<%= form_for :user, url: users_path do |f| %>
		<% if @user.errors.any? %>
			<div class="error"><%= @user.errors.full_messages.join(". ") %></div>
		<% end %>
		<ul>
			<li>
				<%= f.label :name %>
				<%= f.text_field :name %>
			</li>
			<li>
				<%= f.label :email %>
				<%= f.text_field :email %>
			</li>
			<li class="actions">
				<%= link_to 'Cancel', root_path, {class: 'button cancel'} %>
				<%= f.submit %>
			</li>
		</ul>
		<% end %>
	</div>
</section>

